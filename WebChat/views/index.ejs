<!DOCTYPE html>
<html>

<head>
  <meta http-equiv="Content-Type" const="text/html;charset=UTF-8" />
  <link href="http://fonts.googleapis.com/css?family=Comfortaa" rel="stylesheet" type="text/css">
  <link rel="stylesheet" type="text/css" href="style.css">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
  <script src="https://kit.fontawesome.com/73bfb562fe.js" crossorigin="anonymous"></script>
  <title>Teams clone</title>
</head>

<body>

  <section>
    <div id="change_username">
      <input id="username" type="text">
      <button id="send_username" class="button button1" type="button">Set Username</button>
    </div>
    <h1>Group Chat</h1>
  </section>

  <section id="chatroom">
    <section id="feedback"></section>
  </section>

  <section id="input_zone">
    <!-- <input id="message" class="vertical-align" type="text" />
    <button id="send_message" class="button button1" type="submit">Send</button> -->
    <input id="message" class="vertical-align" type="text" />
    <button id="send_message" type="submit" data-toggle="tooltip" title="Send" class="">
      <i class="fa fa-paper-plane fa-2x"></i>
    </button>
  </section>

  <script>
    $(document).ready(function () {
      $("#modalForm").modal("show");
      $('[data-toggle="tooltip"]').tooltip();
    });
  </script>

  <script src="http://code.jquery.com/jquery-latest.min.js"></script>
  <script src="chat.js"></script>
</body>

</html>